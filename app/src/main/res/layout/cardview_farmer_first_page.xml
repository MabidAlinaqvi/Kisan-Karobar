<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_style">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:fontFamily="@font/urdu"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/personImage"
            android:textSize="40sp"
            />
            <ImageView
                android:id="@+id/cardbookmark"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/bookmarkis"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/productName"
                android:fontFamily="@font/urdu"
                android:layout_toLeftOf="@id/personImage"
                android:layout_below="@id/Title"
                android:textSize="20dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/productName"
                android:fontFamily="@font/urdu"
                android:layout_below="@id/Title"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"
                android:layout_marginBottom="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cityOrVill"
                android:fontFamily="@font/urdu"
                android:layout_below="@id/product"
                android:layout_toLeftOf="@id/personImage"
                android:layout_marginBottom="12dp"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cityOrVill"
                android:fontFamily="@font/urdu"
                android:layout_below="@id/product"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"
                android:layout_marginBottom="12dp"
                />
            <TextView
                android:id="@+id/Thsil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Distt"
                android:fontFamily="@font/urdu"
                android:layout_below="@id/city"
                android:layout_alignParentLeft="true"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Distt"
                android:fontFamily="@font/urdu"
                android:layout_below="@id/city"
                android:layout_toLeftOf="@id/personImage"
                android:textSize="20dp"/>
            <RatingBar
                android:id="@+id/rateit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personImage"
                android:layout_marginTop="30dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/commentNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reviewNum"
                android:fontFamily="@font/urdu"
                android:layout_marginTop="40dp"
                android:layout_below="@id/personImage"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reviews"
                android:fontFamily="@font/urdu"
                android:layout_below="@id/personImage"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5sp"
                android:layout_alignParentRight="true"
                android:textSize="20dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>