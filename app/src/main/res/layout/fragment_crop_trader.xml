<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    tools:context="com.example.root.formarsupport.crop_trader">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO: Update blank fragment layout -->


            <android.support.design.widget.TextInputLayout
                android:id="@+id/product_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp">
                <EditText
                    android:id="@+id/product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/urdu"
                    android:hint="@string/product"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/city_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/product_frame"
                android:layout_alignStart="@+id/product_frame"
                android:layout_below="@+id/product_frame">
                <EditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:ems="10"
                    android:fontFamily="@font/urdu"
                    android:hint="@string/cityOrVill"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Thsil_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/city_frame"
                android:layout_alignRight="@+id/city_frame"
                android:layout_below="@+id/city_frame">
                <EditText
                    android:id="@+id/Thsil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:ems="10"
                    android:fontFamily="@font/urdu"
                    android:hint="@string/Tehsil"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/District_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Thsil_frame"
                android:layout_alignStart="@+id/Thsil_frame"
                android:layout_below="@+id/Thsil_frame">
                <EditText
                    android:id="@+id/District"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:ems="10"
                    android:fontFamily="@font/urdu"
                    android:hint="@string/Distt"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sack_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/District_frame"
                android:layout_alignStart="@+id/District_frame"
                android:layout_below="@+id/District_frame">
                <EditText
                    android:id="@+id/sack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:ems="10"
                    android:fontFamily="@font/urdu"
                    android:hint="@string/Prince_per_Sack"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>
            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/area_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sack_frame"
                android:layout_alignStart="@+id/sack_frame"
                android:layout_below="@+id/sack_frame">
                <EditText
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:ems="10"
                    android:fontFamily="@furduleeq"
                    android:hint="@string/Area"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/quantity_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sack_frame"
                android:layout_alignStart="@+id/sack_frame"
                android:layout_below="@+id/sack_frame">
                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:ems="10"
                    android:fontFamily="@font/urdu"
                    android:hint="@string/quantity"
                    android:inputType="textPersonName"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:id="@+id/loan_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantity_frame"
                android:orientation="horizontal"
                android:layout_marginTop="29dp"
                android:weightSum="6"
                >
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/fertilizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textSize="20dp"
                    android:fontFamily="@font/urdu"
                    android:textColor="#000"
                    android:layout_weight="0"
                    />
                <RadioButton
                    android:id="@+id/radio_fertilizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/farmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textSize="20dp"
                    android:fontFamily="@font/urdu"
                    android:textColor="#000"
                    android:layout_weight="3"/>
                <RadioButton
                    android:id="@+id/radio_farmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loan"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:fontFamily="@font/urdu"
                    />
                </RadioGroup>
            </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/loan_frame"
                tools:context="com.example.root.formarsupport.crop_trader"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/map"
                android:layout_alignStart="@id/map"
                android:layout_below="@id/map"
                android:layout_marginTop="29dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/urdu"
                android:text="@string/go"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>


