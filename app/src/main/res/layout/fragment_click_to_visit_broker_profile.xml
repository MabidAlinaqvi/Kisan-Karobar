<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    tools:context="com.example.root.formarsupport.Click_to_visit_brokerProfile">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:theme="@style/AppTheme.AppBarOverlay"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.Toolbar
            android:id="@+id/broker_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- TODO: Update blank fragment layout -->
                <ImageView
                    android:id="@+id/brokerbookmark"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/bookmarkis" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/brokerbookmark"
                    android:fontFamily="@font/urdu"
                    android:text="@string/save"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/brokermessage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/chaticon2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/brokermessage"
                    android:fontFamily="@font/urdu"
                    android:text="@string/sendText"
                    android:textSize="20sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/brokerProfileIs"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/profile1" />

                <RatingBar
                    android:id="@+id/brokerrateit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/brokerProfileIs"
                    android:scaleX="0.7"
                    android:scaleY="0.7" />

                <TextView
                    android:id="@+id/brokercomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/brokerProfileIs"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@id/brokerProfileIs"
                    android:fontFamily="@font/urdu"
                    android:text="@string/reviews"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokercommentNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/brokerProfileIs"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@id/brokercomment"
                    android:fontFamily="@font/urdu"
                    android:text="@string/reviewNum"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/brokerpersonname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/brokerrateit"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/name"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/brokerpersonname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/brokerrateit"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/name"
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/brokername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/brokerpersonname"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/urdu"
                    android:layout_marginTop="20dp"
                    android:text="@string/productName"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/brokername2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/brokerpersonname"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/urdu"
                    android:layout_marginTop="20dp"
                    android:text="@string/productName"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/brokerntn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/brokername"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/ntn"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokerntn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/brokername"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/ntn"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokercity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/brokerntn"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/cityOrVill"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokercity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/brokerntn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/cityOrVill"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokerDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/brokercity"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/Distt"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokerDistrict2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/brokercity"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/Distt"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokerThsil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/brokerDistrict"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/Tehsil"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokerThsil2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/brokerDistrict"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/Tehsil"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokerquantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/brokerThsil2"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/ProductQuant"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/brokerquantity2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/brokerThsil"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/urdu"
                    android:text="@string/ProductQuant"
                    android:textSize="20dp" />
                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/brokerquantity"
                    tools:context="com.example.root.formarsupport.Click_to_visit_traderProfile"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
