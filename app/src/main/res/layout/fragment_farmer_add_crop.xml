<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    tools:context="com.example.root.formarsupport.farmer_add_crop">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO: Update blank fragment layout -->



            <android.support.design.widget.TextInputLayout
                android:id="@+id/product_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp">
            <EditText
                android:id="@+id/product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/product"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/product_type_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/product_frame"
                android:layout_alignStart="@id/product_frame"
                android:layout_below="@id/product_frame">
            <EditText
                android:id="@+id/product_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/type_of_product"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/city_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/product_type_frame"
                android:layout_alignStart="@+id/product_type_frame"
                android:layout_below="@+id/product_type_frame">
            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/cityOrVill"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/Thsil_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/city_frame"
                android:layout_alignRight="@+id/city_frame"
                android:layout_below="@+id/city_frame">
            <EditText
                android:id="@+id/Thsil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/Tehsil"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
            android:id="@+id/District_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Thsil_frame"
            android:layout_alignStart="@+id/Thsil_frame"
            android:layout_below="@+id/Thsil_frame">
            <EditText
                android:id="@+id/District"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/Distt"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/sack_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/District_frame"
                android:layout_alignStart="@+id/District_frame"
                android:layout_below="@+id/District_frame">
            <EditText
                android:id="@+id/sack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/Prince_per_Sack"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/area_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sack_frame"
                android:layout_alignStart="@+id/sack_frame"
                android:layout_below="@+id/sack_frame">
            <EditText
                android:id="@+id/area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/Area"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/quantity_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/area_frame"
                android:layout_alignStart="@+id/area_frame"
                android:layout_below="@+id/area_frame">
            <EditText
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/quantity"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/harvast_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/quantity_frame"
                android:layout_alignStart="@+id/quantity_frame"
                android:layout_below="@+id/quantity_frame">
            <EditText
                android:id="@+id/harvast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:fontFamily="@font/urdu"
                android:hint="@string/Harvesting_time"
                android:inputType="textPersonName"
                android:textStyle="bold"/>
            </android.support.design.widget.TextInputLayout>
            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/source_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/harvast_frame"
                android:layout_alignStart="@+id/harvast_frame"
                android:layout_below="@+id/harvast_frame">
            <EditText
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:hint="@string/Source_of_water"
                android:fontFamily="@furduleeq"
                android:inputType="textPersonName"
                android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:id="@+id/proof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/source_frame"
                android:layout_marginTop="29dp"
                android:orientation="horizontal"
                android:weightSum="7">

                <TextView
                    android:id="@+id/browsed_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp"
                    android:layout_weight="6"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Land_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:fontFamily="@furduleeq"
                    android:hint="@string/attach_proof"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>-->
            <LinearLayout
                android:id="@+id/pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/harvast_frame"
                android:orientation="horizontal"
                android:layout_marginTop="29dp"
                android:weightSum="6">
                <Button
                    android:id="@+id/Chose_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/from_gallery"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/button_style"
                    android:fontFamily="@font/urdu"/>
                <ImageButton
                    android:id="@+id/take_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    android:background="@drawable/button_style"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attach_images"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:fontFamily="@font/urdu"
                    />
            </LinearLayout>

            <GridView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:columnWidth="90dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:layout_below="@+id/pictures"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/map_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridview"
                android:layout_alignParentRight="true"
                android:text="@string/map_info"
                android:fontFamily="@font/urdu"
                android:textSize="20dp"/>
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/map_detail"
                tools:context="com.example.root.formarsupport.farmer_add_crop"/>
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/map"
                android:layout_alignStart="@id/map"
                android:layout_below="@id/map"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/urdu"
                android:text="@string/go"
                android:textSize="20dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

